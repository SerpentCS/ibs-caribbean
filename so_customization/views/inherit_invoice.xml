<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="inherit_invoice_crm" model="ir.ui.view">
            <field name="name">CRM Invoice Field</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='ref']" position="after">
                    <field name="contact_person"/>
                    <field name="email"/>
                    <field name="telephone"/>
                    <field name="recurring_period"/>
                    <field name="term_and_condition"/>
                    <field name="start_date"/>
                </xpath>

                <xpath expr="//field[@name='company_id']" position="after">
                    <!--            <field name="company"/>-->
                    <field name="billing_contact"/>
                    <field name="billing_email"/>
                    <field name="billing_telephone"/>
                    <field name="end_date"/>
                    <field name="contract"/>
                </xpath>

            </field>
        </record>
        <template id="inherit_sale_template_new" inherit_id="sale.sale_order_portal_content">

            <xpath expr="//div[@id='informations']" position="inside">
                <div class="row">
                    <div class="col-6">
                        <strong>Email:</strong>
                        <span t-field="sale_order.email" />
                        <br/>
                        <strong>Start Date:</strong>
                        <span t-field="sale_order.start_date" t-options='{"widget": "date"}'/>
                        <br/>
                        <strong>Company:</strong>
                        <span t-field="sale_order.company"/>
                        <br/>
                        <strong>billing Contact:</strong>
                        <span t-field="sale_order.billing_contact"/>
                        <br/>
                        <strong>Billing Telephone:</strong>
                        <span t-field="sale_order.billing_telephone"/>

                    </div>
                    <div class="col-6">
                        <strong>Payment Term:</strong>
                        <span t-field="sale_order.payment_term_id" />
                        <br/>
                        <strong>End Date:</strong>
                        <span t-field="sale_order.end_date" t-options='{"widget": "date"}'/>
                        <br/>
                         <strong>Quotation Date:</strong>
                        <span t-field="sale_order.date_order" t-options='{"widget": "date"}'/>
                        <br/>
                        <strong>Contact Person:</strong>
                        <span t-field="sale_order.contact_person"/>
                        <br/>
                        <strong>Biilling Email:</strong>
                        <span t-field="sale_order.billing_email"/>
                        <br/>
                        <strong>Contract:</strong>
                        <span t-field="sale_order.contract"/>
                    </div>
                </div>


            </xpath>
            <xpath expr="//section[@id='details']//h3[@id='details']" position="replace">
                <h3>Advertising Agreement</h3>
            </xpath>
        </template>

        <template id="inherit_sale_template_proposal" inherit_id="sale.sale_order_portal_template">
            <xpath expr="//main[@id='sign-dialog']/p" position="replace">
                <p>
                    <span>
                        By signing this agreement, I have read and accept the terms and conditions
                    </span>
                    <ul>
<!--                        <li>-->
<!--                            <span>on behalf of:</span>-->
<!--                            <b t-field="sale_order.partner_id.commercial_partner_id"/>-->
<!--                        </li>-->
                        <li>
                            <span>On the behalf:</span>
                            <b t-field="sale_order.company_id"/>
                        </li>
                        <li>
                            <span>For the amount of:</span>
                            <b data-id="total_amount" t-field="sale_order.amount_total"/> Per Month
                        </li>
<!--                        <li t-if="sale_order.payment_term_id">-->
<!--                            <span>With payment terms:</span>-->
<!--                            <b t-field="sale_order.payment_term_id.note"/>-->
<!--                        </li>-->
                        <li>
                            <span>Starting on:</span>
                            <b t-field="sale_order.start_date"/> And
                        </li>
                        <li>
                            <span>Ending on:</span>
                            <b t-field="sale_order.end_date"/>
                        </li>
                    </ul>
                </p>
                <!--                <t t-call="portal.signature_form">-->
                <!--                    <t t-set="call_url" t-value="sale_order.get_portal_url(suffix='/accept')"/>-->
                <!--                    <t t-set="default_name" t-value="sale_order.partner_id.name"/>-->
                <!--                </t>-->
            </xpath>

        </template>

    </data>
</odoo>