<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cron_so_notification" model="ir.cron">
            <field name="name">So Customization: Notification</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.mail_reminder()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>


        <record id="mail_template_so_mail" model="mail.template">
            <field name="name">So: Send by email</field>
            <field name="email_from">${ctx['email_from']}</field>
            <field name="subject">So: Send by email</field>
            <field name="lang">${object.lang}</field>
            <field name="email_to">${for email in object.mail_reminder_abc():}</field>
            <field name="model_id" ref="so_customization.model_sale_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="xml">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">

                        Dear ${object.name}
                        Thank you for your enquiry.
                        If you have any questions, please let us know.

                        Thank you,
                    </p>
                </div>
            </field>
        </record>

    </data>
</odoo>